<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/background_reg"

    android:layout_height="match_parent">

  <FrameLayout
      android:layout_height="250dp"
      android:layout_width="400dp"
      android:layout_marginStart="100dp"
      android:layout_marginTop="100dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">
<ImageView
    android:layout_width="match_parent"
    android:background="@color/white"
    android:alpha="0.7"
    android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Авторизация"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите номер телефона"
            android:textSize="16sp"
            android:textColor="@color/black"

            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="+996"
                android:focusable="false"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="20dp"
                android:layout_height="1dp"/>
            <EditText
                android:id="@+id/text_phone"
                android:layout_width="wrap_content"
                android:maxLength="11"
                android:layout_height="wrap_content"
                android:hint="000 000 000"
                android:textColor="@color/black"
                android:focusable="false"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_yellow"
                android:textSize="18sp"
                android:layout_marginStart="10sp"
                android:focusable="true"
                android:onClick="onClickForNumbers"
                android:layout_marginEnd="10sp"
                android:text="1"/>
            <TextView
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:onClick="onClickForNumbers"

                android:textColor="@color/black_yellow"
                android:textSize="18sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:text="2"/> <TextView
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_yellow"
            android:textSize="18sp"
            android:focusable="true"
            android:onClick="onClickForNumbers"

            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:text="3"/> <TextView
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:focusable="true"
            android:onClick="onClickForNumbers"

            android:layout_height="wrap_content"
            android:textColor="@color/black_yellow"
            android:textSize="18sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:text="4"/> <TextView
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_yellow"
            android:textSize="18sp"
            android:focusable="true"
            android:onClick="onClickForNumbers"

            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:text="5"/> <TextView
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_yellow"
            android:focusable="true"
            android:onClick="onClickForNumbers"

            android:textSize="18sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:text="6"/> <TextView
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_yellow"
            android:focusable="true"
            android:onClick="onClickForNumbers"

            android:textSize="18sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:text="7"/> <TextView
            android:id="@+id/eight"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_yellow"
            android:textSize="18sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:onClick="onClickForNumbers"

            android:text="8"/>
            <TextView
                android:id="@+id/nine"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_yellow"
                android:textSize="18sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:onClick="onClickForNumbers"

                android:text="9"/>
            <TextView
                android:id="@+id/zero"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_yellow"
                android:textSize="18sp"
                android:layout_marginStart="10sp"
                android:onClick="onClickForNumbers"

                android:layout_marginEnd="10sp"
                android:text="0"/>
            <ImageView
                android:id="@+id/backSpace"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:onClick="onClickForNumbers"
                android:focusable="true"
                android:src="@drawable/ic_backspace"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/buttonVPS"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="18sp"
                android:paddingVertical="8dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:textAlignment="center"
                android:background="@drawable/button_background"
                android:textColor="@color/white_black"
                android:layout_margin="10dp"
                android:text="VPS 2/3"/>

            <TextView
                android:id="@+id/buttonContininue"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:textAlignment="center"
                android:background="@drawable/button_background"
                android:textColor="@color/white_black"
                android:paddingVertical="8dp"
                android:text="Далее"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
        </LinearLayout>

    </LinearLayout>
  </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>