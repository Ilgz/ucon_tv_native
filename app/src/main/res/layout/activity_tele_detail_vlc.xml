<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pg"
    android:paddingTop="13dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingBottom="13dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tele_movie_detail_background">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="64dp"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/player"
        app:layout_constraintStart_toStartOf="@+id/player"
        app:layout_constraintTop_toBottomOf="@+id/player"
        app:layout_constraintVertical_bias="0.38"
        app:srcCompat="@drawable/controlguide" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/category_list"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/list1"
        app:layout_constraintTop_toBottomOf="@id/imageButton2">

        <Button
            android:id="@+id/All_category_list"
            android:layout_width="300dp"

            android:layout_height="wrap_content"


            android:layout_marginTop="8dp"
            android:background="@drawable/blue_to_white"
            android:text="Все каналы"
            android:textAllCaps="false"
            android:textColor="@color/black_white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/news_category_list"
            android:layout_width="300dp"


            android:layout_height="wrap_content"


            android:layout_marginTop="3dp"
            android:background="@drawable/blue_to_white"
            android:text="Новостные"
            android:textAllCaps="false"
            android:textColor="@color/black_white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/All_category_list" />

        <Button
            android:id="@+id/efir_list_category"
            android:layout_width="300dp"


            android:layout_height="wrap_content"


            android:layout_marginTop="3dp"


            android:background="@drawable/blue_to_white"
            android:text="Познавательные"
            android:textAllCaps="false"
            android:textColor="@color/black_white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/child_list_category" />

        <Button
            android:id="@+id/kin_ser_category_list"
            android:layout_width="300dp"


            android:layout_height="wrap_content"


            android:layout_marginTop="3dp"

            android:background="@drawable/blue_to_white"
            android:text="Фильмы/Сериалы"
            android:textAllCaps="false"
            android:textColor="@color/black_white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/news_category_list" />

        <Button
            android:id="@+id/child_list_category"
            android:layout_width="300dp"


            android:layout_height="wrap_content"


            android:layout_marginTop="3dp"
            android:background="@drawable/blue_to_white"
            android:text="Детские"
            android:textAllCaps="false"
            android:textColor="@color/black_white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/music_list_category" />

        <Button
            android:id="@+id/sport_list_category"
            android:layout_width="300dp"


            android:layout_height="wrap_content"


            android:layout_marginTop="3dp"

            android:background="@drawable/blue_to_white"
            android:text="Спортивные"
            android:textAllCaps="false"
            android:textColor="@color/black_white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kin_ser_category_list" />

        <Button
            android:id="@+id/music_list_category"
            android:layout_width="300dp"


            android:layout_height="wrap_content"


            android:layout_marginTop="3dp"

            android:background="@drawable/blue_to_white"
            android:text="Музыкальные"
            android:textAllCaps="false"
            android:textColor="@color/black_white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sport_list_category" />

        <Button
            android:id="@+id/international_category_list"
            android:layout_width="300dp"


            android:layout_height="wrap_content"


            android:layout_marginTop="3dp"

            android:background="@drawable/blue_to_white"
            android:text="Международные"
            android:textAllCaps="false"
            android:textColor="@color/black_white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/efir_list_category" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--    <include-->
    <!--        layout="@layout/category_list"-->
    <!--        />-->

    <org.videolan.libvlc.util.VLCVideoLayout
        android:id="@+id/player"
        android:layout_width="0dp"
        android:layout_height="0dp"


        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="200dp"
        android:focusable="false"
        android:foregroundGravity="center"
        android:nextFocusUp="@id/imageButton2"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/list1"
        app:layout_constraintTop_toTopOf="@id/list1">

    </org.videolan.libvlc.util.VLCVideoLayout>

    <ImageView
        android:id="@+id/imageButton2"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="893dp"
        android:background="@drawable/back_button_background"
        android:focusable="true"
        android:padding="6dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <ListView
        android:id="@+id/list1"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"

        android:layout_marginEnd="700dp"
        android:layout_marginBottom="1dp"
        android:choiceMode="none"
        android:fadeScrollbars="false"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        app:layout_constraintVertical_bias="0.0">

        <requestFocus />
    </ListView>

    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="-1dp"
        android:background="#000040"
        android:nextFocusRight="@id/right"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/list1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="36dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/list1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button8"
        app:srcCompat="@drawable/lb_ic_play" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue"
        android:elevation="100dp"
        android:padding="20dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/player"
        app:layout_constraintEnd_toEndOf="@+id/player"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/player"
        app:layout_constraintTop_toTopOf="@+id/player"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/list1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="100dp"
        android:focusable="false"
        android:indeterminate="true"
        android:indeterminateTint="@color/yellow"
        android:indeterminateTintMode="src_atop"
        app:layout_constraintBottom_toBottomOf="@+id/player"
        app:layout_constraintEnd_toEndOf="@+id/player"
        app:layout_constraintStart_toStartOf="@+id/player"
        app:layout_constraintTop_toTopOf="@+id/player" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="90dp"
        android:focusable="false"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/player"
        app:layout_constraintEnd_toEndOf="@+id/player"
        app:layout_constraintStart_toStartOf="@+id/player"
        app:layout_constraintTop_toTopOf="@+id/player"
        app:srcCompat="@drawable/blurytele" />

</androidx.constraintlayout.widget.ConstraintLayout>